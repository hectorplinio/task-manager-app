{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "allowJs": false,
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "declaration": true,
    "baseUrl": "src",
    "target": "es2020",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "allowUnreachableCode": true,
    "lib": ["es2017", "es2020"],
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "@root/*": ["../*"],
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"]
    },
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src", "types"]
}
